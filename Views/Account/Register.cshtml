<div class="main-container">
    <div class="center-div">
        <form asp-controller="Account" asp-action="Register">
            <div class="form">
                <input class="form-input" type="text" name="username" id="username" placeholder=" " autocomplete="off" />
                <label for="username" class="form-label">Username</label>
            </div>
            <div class="form">
                <input class="form-input" name="firstName" id="firstName" placeholder=" " autocomplete="off" />
                <label for="firstName" class="form-label">First Name</label>
            </div>
            <div class="form">
                <input class="form-input" name="lastName" id="lastName" placeholder=" " autocomplete="off" />
                <label for="lastName" class="form-label">Last Name</label>
            </div>
            <div class="form">
                <input class="form-input" type="password" id="password" name="password" placeholder=" " autocomplete="off" />
                <label for="password" class="form-label">Password</label>
            </div>
            
            <button type="submit" class="form-button">Register</button>
        </form>
        <button type="button" class="form-button" onclick="reset()">Reset</button>
    </div>
</div>

@section Scripts {
    <script>
        function reset() {
            var username = document.getElementById('username');
            username.value = '';
            var firstName = document.getElementById('firstName');
            firstName.value = '';
            var lastName = document.getElementById('lastName');
            lastName.value = '';
            var password = document.getElementById('password');
            password.value = '';
        }
    </script>
}