@model List<ChatRoom>

<h2 class="text-danger">Join chosen room before entering to receive notifications in said room</h2>


<form asp-controller="Chat" asp-action="CreateRoom">
    <div class="form-group row">
        <div class="input-group-prepend">
            <span class="input-group-text">Room Name</span>
        </div>
        <input type="text" name="roomName" placeholder="Your Room Name" />
    </div>
    <div class="form-group row">
        <button class="btn-lg btn-secondary" type="submit">Create New Room</button>
    </div>
</form>

@if (Model.Any())
{
    <div class="container" style="">
        @foreach (var room in Model)
        {
            <div class="card">
                <div class="card-header">
                    @room.RoomName
                </div>
                <div class="card-body">
                    <a class="btn btn-secondary" asp-controller="Chat" asp-action="ListRooms">Join Room</a>
                    <a class="btn btn-success" asp-controller="Chat" asp-action="DisplayChatRoom" asp-route-roomName="@room.RoomName">Enter</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <h3>No rooms available</h3>
}
